<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/genric"
    tools:context="wild.tanvasthing.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/vieww"
        android:visibility="invisible"/>

    <!--<ImageView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="500px"-->
        <!--android:id="@+id/imageView3"-->
        <!--android:src="@drawable/overlay"-->
        <!--android:layout_below="@+id/imageView4"-->
        <!--android:layout_alignParentStart="true" />-->

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upload Image"
        android:id="@+id/buttonUp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/buttonT"
        android:background="@drawable/shape2"
        android:paddingLeft="10dip"
        android:textSize="35dp"
        android:paddingRight="10dip" />


    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upload Texture"
        android:id="@+id/buttonT"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/shape"
        android:textSize="35dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" />



    <ImageView
        android:layout_width="800dip"
        android:layout_height="450dp"
        android:id="@+id/imageView1"
        android:src="@drawable/overlay"
        android:background="@drawable/shadow"
        android:layout_alignParentEnd="false"
        android:paddingBottom="10dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/imageView1"
        android:layout_toEndOf="@+id/vieww"
        android:layout_above="@+id/buttonUp">

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:id="@+id/listView2"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:layout_toStartOf="@+id/buttonUp"
            android:layout_above="@+id/buttonUp"
            android:background="@drawable/list"
            android:layout_alignEnd="@+id/imageView1"
            android:layout_alignParentEnd="false"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="25dp" />
    </RelativeLayout>


</RelativeLayout>
